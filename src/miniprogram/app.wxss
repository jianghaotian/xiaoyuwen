/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  box-sizing: border-box;
} 
/* top bar */
.topbar {
  height: 70rpx;
  width: 100%;
  padding-left: 40rpx;
  margin-bottom: 20rpx;
  line-height: 70rpx;
  font-size: 40rpx;
  background-color: #F4E7D7;
}
.topbar .small {
  margin-left: 26rpx;
  font-size: 30rpx;
}
/* 字母表格样式 */
.zimu {
  display: flex;
  flex-wrap: wrap;
  /* 整体表格的间距 */
  margin: 0 auto;
  width: 704rpx;
  box-sizing: border-box;
}
.zimu_block {
  display: flex;
  align-items: center;
  justify-content: center;
  /* 每个表格的宽高 */
  width: 150rpx;
  height: 150rpx;
  /* 每个表格的间距 */
  margin: 14rpx;
  border: 1rpx solid rgba(0, 0, 0, .2);
  border-radius: 10rpx;
  box-shadow: 0rpx 6rpx 6rpx 6rpx rgba(0, 0, 0, .1);
}
.zimu_block text {
  line-height: 10rpx;
  font-size: 66rpx;

}